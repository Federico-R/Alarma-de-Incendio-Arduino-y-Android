<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.usuario.alarmaincendiofinal.NumerosEmerActivity"
    tools:showIn="@layout/activity_numeros_emer"
    android:background="#ffc800"
    android:weightSum="1"
    android:textAlignment="textEnd">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Número Registrado:"
        android:id="@+id/textView12"
        android:layout_weight="0.08"
        android:textColor="#fe3700"
        android:textSize="19dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewNumReg"
        android:layout_gravity="center_vertical"
        android:layout_below="@+id/textView12"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="16sp"
        android:layout_toRightOf="@+id/textView12"
        android:layout_toEndOf="@+id/textView12"
        android:textAlignment="textEnd"
        android:hint="Sin Núm Registrado"
        android:textColor="#fe3700"
        android:textColorHint="#fe3700" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextNuevoNum"
        android:layout_marginTop="92dp"
        android:layout_below="@+id/textViewNumReg"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColorHint="#fe3700"
        android:textColor="#fe3700"
        android:hint="Nuevo Numero Emergencias"
        android:textSize="17sp"
        android:textAlignment="center" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registrar"
        android:id="@+id/buttonRegistrar"
        android:layout_below="@+id/editTextNuevoNum"
        android:layout_centerHorizontal="true"
        android:background="#ff7300" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Llamar Num Registrado"
        android:id="@+id/buttonLlamarReg"
        android:layout_below="@+id/buttonRegistrar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="61dp"
        android:background="#ff4000" />

</RelativeLayout>
